{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/*.js",
    "types/**/*.ts"],
  "exclude": ["node_modules"]
}