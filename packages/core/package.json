{
  "name": "@open-cells/core",
  "version": "1.1.0-rc.0",
  "description": "Open Cells Core",
  "type": "module",
  "types": "types/**/*.ts",
  "main": "src/index.js",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "prepublish": "npm run --unsafe-perm build",
    "typchk": "tsc -p ./tsconfig-typchk.json --noEmit",
    "unit-test": "npm run type-check && npm run test",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --fix",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "files": [
    "src/**/*",
    "types/**/*"
  ],
  "keywords": [
    "core",
    "webcomponents"
  ],
  "dependencies": {
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@vitest/browser": "^2.1.2",
    "@vitest/coverage-istanbul": "^2.1.2"
  },
  "directories": {
    "test": "test"
  },
  "publishConfig": {
    "access": "public"
  }
}
