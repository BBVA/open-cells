{
  "name": "@open-cells/create-app",
  "version": "1.0.0",
  "description": "Scaffold for Open Cells apps",
  "license": "MIT",
  "type": "module",
  "author": "Julio E. Castillo Anselmi",
  "bin": {
    "create-app": "./src/create.js"
  },
  "scripts": {
    "start": "node ./src/create.js",
    "update": "node ./scripts/update.js",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.mjs,.cjs .",
    "lint:prettier": "prettier \"**/*.{js,mjs,cjs,md.json}\" --check --ignore-path .eslintignore",
    "release": "changeset publish"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "create-app",
    "open-cells",
    "generator",
    "scaffold",
    "create"
  ],
  "dependencies": {
    "@open-wc/create": "^0.37.95",
    "chalk": "^4.1.0",
    "command-line-args": "^5.1.1",
    "glob": "^10.3.10",
    "prompts": "^2.4.1",
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@open-wc/eslint-config": "^4.2.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 100,
    "trailingComma": "all"
  },
  "publishConfig": {
    "access": "public"
  }
}
